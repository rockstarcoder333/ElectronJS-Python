{
    "name": "Bean-Counter",
    "version": "0.1.0",
    "main": "./electron/main.js",
    "scripts": {
        "start": "electron .",
        "pack": "electron-builder --dir",
        "dist": "electron-builder",
        "package-linux": "electron-packager .  electron-tutorial-app --overwrite --asar=true --platform=linux --arch=x64 --icon=assets/icons/png/1024x1024.png --prune=true --out=release-builds",
        "create-installer-win": "node installers/windows/createinstaller.js",
        "create-debian-installer": "electron-installer-debian --src release-builds/electron-tutorial-app-linux-x64/ --arch amd64 --config debian.json"
    },
    "devDependencies": {
        "electron": "^6.1.12",
        "electron-builder": "^23.1.0"
    },
    "dependencies": {
        "ajv": "^8.11.0",
        "nedb-promises": "^6.1.0",
        "terminate": "^2.5.0"
    },
    "build": {
        "appId": "com.trinityinfosystem.electron.exchange.stream",
        "productName": "BeanCounter",
        "copyright": "Copyright Â© 2022 Tyler",
        "mac": {
            "category": "public.app-category.utilities",
            "icon": "img/bean.icns",
            "target": [
                "zip",
                "dmg"
            ],
            "publish": [
                "github"
            ]
        },
        "win": {
            "publisherName": "Trinity InfoSystem",
            "publish": [
                "github"
            ],
            "target": [
                "nsis"
            ],
            "icon": "img/bean.icns"
        },
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ]
        },
        "dmg": {
            "background": "assets/background.png",
            "icon": "assets/icon.icns",
            "title": "Bean-Counter Installer"
        },
        "publish": [
            {
                "provider": "github",
                "owner": "vkiranmaniya",
                "repo": "accurate",
                "vPrefixedTagName": true,
                "private": true,
                "releaseType": "draft"
            }
        ]
    }
}
